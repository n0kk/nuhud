// Font Size
//
// Adjust the size of the health, ammo, and ubercharge numbers
// by changing the number in the font name. Font definitions
// range from 6-50.
//
// Not recommened changing with alt. health animations, as
// they use specifically-sized HUD elements (health cross 
// and box).

"Customization/Fontsize.res"
{

// Health numbers

	"PlayerStatusHealthValue"
	{
		"font"			"nüBold40"
	}
	"PlayerStatusHealthValueShadow"
	{
		"font"			"nüBoldBlur40"
	}

// Ammo numbers

	"AmmoInClip"
	{
		"font"			"nüBold40"
	}
	"AmmoInClipShadow"
	{
		"font"			"nüBoldBlur40"
	}
	"AmmoInReserve"
	{
		"font"			"nüMedium20"
	}
	"AmmoInReserveShadow"
	{
		"font"			"nüMediumBlur20"
	}
	"AmmoNoClip"
	{
		"font"			"nüBold40"
	}
	"AmmoNoClipShadow"
	{
		"font"			"nüBoldBlur40"
	}

// Ubercharge numbers
// The alt. centered Medic HUD layout is unaffected.

	"ChargeLabel"
	{
		"font"			"nüBold40"
	}
	"ChargeLabelShadow"
	{
		"font"			"nüBoldBlur40"
	}
}